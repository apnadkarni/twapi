        twapi::write_console stdout "VVVVV\r\nVVVVV" -position [list 0 $ypos] -restoreposition true -newlinemode column
        yesno "\nWere 2 lines of V's written at left-middle of screen WITHOUT INTEVENING BLANK LINE and this prompt appeared at *original* location?"
    } -result 1




